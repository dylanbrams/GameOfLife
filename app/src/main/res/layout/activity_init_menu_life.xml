<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dylanbrams.gameoflife.InitMenuLife">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Input the Random Seed (int) You Want to Use"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014"/>

    <EditText
        android:id="@+id/randomSeedInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="122dp"/>

    <TextView
        android:id="@+id/tvBlankForRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="(blank for randomized seed)"
        app:layout_constraintTop_toBottomOf="@+id/randomSeedInput"
        tools:layout_editor_absoluteX="6dp"/>

    <Button
        android:id="@+id/btnCreateLife"
        android:layout_width="353dp"
        android:layout_height="330dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="I CREATE LIFE"
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="openGameOfLife"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBlankForRandom"/>

</android.support.constraint.ConstraintLayout>
